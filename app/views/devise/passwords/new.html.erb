<%= render partial: "shared/navbar" %>

<div class= "devise-page forgot-password"> 
  <div class= "devise-card"> 
    <div class= "devise-image">
    <%= image_pack_tag 'devise-racket.jpeg' %> 
    </div>
    <div class= "form-container">
      <h1>Forgot your password?</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-password" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Reset password", class: "button-up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div> 
  </div>
</div>